<%= form_with(model: wiki, local: true) do |form| %>
  <% if wiki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wiki.errors.count, "error") %> prohibited this wiki from being saved:</h2>
      <ul>
      <% wiki.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag "submit", :id => "wiki" do -%>
  <div class="form-group">  Title: <%= text_field_tag :title %> </div>
  <div class="form-group">  Body: <%= text_area_tag :body %> </div>
  <% if current_user.admin? || current_user.premium? %>
    <div class="form-group">
      <%= form.label :private, class: 'checkbox' do %>
        <%= form.check_box :private %> Private wiki
      <% end %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end -%>
<% end %>
